/* pages/common/image/image-pro.wxss */

.image-pro-place,
.image-pro{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.blur {    
    -webkit-filter: blur(15px); /* Chrome, Opera */
       -moz-filter: blur(15px);
        -ms-filter: blur(15px);    
            filter: blur(15px);    
}

.image-pro-pre {
  width: 0;
  height: 0;
}
.fade-in {
  animation: fadeIn 1s both;
}
@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.errors {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F7AF41;
}