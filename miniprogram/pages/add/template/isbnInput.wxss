.input-bg {
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.input-content {
  width: 560rpx;
  height: 770rpx;
  margin-top: 100rpx;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.input-header {
  font-size: 20px;
  color: #333;
  margin-top: 40px;
  border-bottom: 1px solid #999;
  padding-bottom: 20rpx;
}
.input-example image {
  margin-top: 10px;
  width: 400rpx;
  height: 200rpx;
  background-color:yellow;
}

.input-input {
  margin-top: 20rpx;
  background-color: #eee;
  border-radius: 4px;
  padding: 20rpx;
  height: 80rpx;
  width: 400rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #333;

}
.input-submit  {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 60rpx;
  border-radius: 60rpx;
  font-size: 16px;
  color: white;
  background-color: #a3a380;
}
.input-close image{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
