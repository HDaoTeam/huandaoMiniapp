/* miniprogram/pages/home/home.wxss */

.container {
  width: 100%;
  height: 100%;
}

.nav-bar {
  height: 100rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #a3a380;
  z-index: 1000;
}

.search {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #999;
  align-items: center;
  height: 66rpx;
  background-color: #fefefe;
  border-radius: 20rpx;
}

.search image {
  width: 15px;
  height: 15px;
  display: inline-block;
}
.search text {
  margin-left: 20rpx;
}
.locate {
  font-size: 12px;
  color: white;
  width: 160rpx;
  /* background-color: #666; */
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.locate image {
  width: 13px;
  height: 13px;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.content {
  padding-top: 100rpx;
}

.banner-image {
  height: 400rpx;
  width: 100%;
}
.section-header {
  padding: 8rpx 20rpx;
  color: #333;
  font-size: 14px;
  margin-top: 10rpx;
}
.major-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  font-size: 16px;
  color: #666;
  padding: 16rpx 18rpx;
}
.major-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.major-src {
  height: 180rpx;
  flex-wrap: nowrap;
  white-space: nowrap;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}

.books {
  padding: 10rpx 20rpx;
  padding-right: 0;
}

.books-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.book {
  color: #333;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30%;
  margin-right: 20rpx;
}
.book text {
  margin-bottom: 20rpx;
}

.book image {
  /* width: 200rpx; */
  width: 100%;
  height: 310rpx;
  margin-bottom: 20rpx;
}

.hover {
  background-color: #eee;
}





